{
    "version": 5,
    "configurePresets": [
        {
            "name": "configuration-base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/.build/${presetName}",
            "toolchainFile": "${sourceDir}/cmake/ModuleLibToolchain.cmake",
            "cacheVariables": {
                "PROJECT_CONAN_PROFILE": "${presetName}"
            }
        },

        {
            "name": "windows-base",
            "inherits": "configuration-base",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            }
        },
        {
            "name": "windows-x86-debug",
            "inherits": "windows-base",
            "architecture": { "strategy": "external", "value": "x86" },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "windows-x64-debug",
            "inherits": "windows-base",
            "architecture": { "strategy": "external", "value": "x64" },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "windows-x86-release",
            "inherits": "windows-base",
            "architecture": { "strategy": "external", "value": "x86" },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "windows-x64-release",
            "inherits": "windows-base",
            "architecture": { "strategy": "external", "value": "x64" },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        
        {
            "name": "linux-base",
            "inherits": "configuration-base",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "gcc"
            }
        },
        {
            "name": "linux-x86-debug",
            "inherits": "linux-base",
            "architecture": { "strategy": "external", "value": "x86" },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "linux-x64-debug",
            "inherits": "linux-base",
            "architecture": { "strategy": "external", "value": "x64" },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "linux-x86-release",
            "inherits": "linux-base",
            "architecture": { "strategy": "external", "value": "x86" },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "linux-x64-release",
            "inherits": "linux-base",
            "architecture": { "strategy": "external", "value": "x64" },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        }
    ],

    "buildPresets": [
        {
            "name": "windows-x86-debug",
            "configurePreset": "windows-x86-debug"
        },
        {
            "name": "windows-x64-debug",
            "configurePreset": "windows-x64-debug"
        },
        {
            "name": "windows-x86-release",
            "configurePreset": "windows-x86-release"
        },
        {
            "name": "windows-x64-release",
            "configurePreset": "windows-x64-release"
        },
        
        {
            "name": "linux-x86-debug",
            "configurePreset": "linux-x86-debug"
        },
        {
            "name": "linux-x64-debug",
            "configurePreset": "linux-x64-debug"
        },
        {
            "name": "linux-x86-release",
            "configurePreset": "linux-x86-release"
        },
        {
            "name": "linux-x64-release",
            "configurePreset": "linux-x64-release"
        }
    ],

    "testPresets": [
        {
            "name": "test-base",
            "hidden": true,
            "environment": {
                "CTEST_OUTPUT_ON_FAILURE": "1"
            }
        },
        {
            "name": "windows-x86-debug",
            "inherits": "test-base",
            "configurePreset": "windows-x86-debug"
        },
        {
            "name": "windows-x64-debug",
            "inherits": "test-base",
            "configurePreset": "windows-x64-debug"
        },
        {
            "name": "windows-x86-release",
            "inherits": "test-base",
            "configurePreset": "windows-x86-release"
        },
        {
            "name": "windows-x64-release",
            "inherits": "test-base",
            "configurePreset": "windows-x64-release"
        },
        
        {
            "name": "linux-x86-debug",
            "inherits": "test-base",
            "configurePreset": "linux-x86-debug"
        },
        {
            "name": "linux-x64-debug",
            "inherits": "test-base",
            "configurePreset": "linux-x64-debug"
        },
        {
            "name": "linux-x86-release",
            "inherits": "test-base",
            "configurePreset": "linux-x86-release"
        },
        {
            "name": "linux-x64-release",
            "inherits": "test-base",
            "configurePreset": "linux-x64-release"
        }
    ]
}
